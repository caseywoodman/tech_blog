{{#each posts as |post|}}
    <div class="m-auto col-md-12 post-card">
      <div class='display-flex justify-space-between p-3 post-header'> 
        <p class="post-header-text">{{post.title}}</p>
        <p class="post-body-text">posted by {{post.user.username}} on {{post.createdAt}}</p>
      </div>
      <div class='post-body'>
        <p class="post-body-text">{{post.body}}</p>
      </div>
    </div>
{{/each}}